<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <ImageView
        android:id="@+id/grid_video_list_item_img"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />
    <TextView
        android:background="?attr/colorPrimary"
        android:id="@+id/grid_video_list_item__note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom ="@id/grid_video_list_item_img"
        android:gravity="center"
        android:text="高清HD"
        android:textColor="@color/white"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/grid_video_list_item__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_video_list_item_img"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="我是标题"
        android:textSize="14sp" />
</RelativeLayout>